<div class="row">
	<div class="span12">
		<h1><%=@post.title%>
		<small class="author">Updated by: <%= @post.modified_by %> at <%= @post.updated_at.strftime("%d/%m %H:%M") %></small>
		</h1>
		
	</div>
</div>

<div class= "row">
	<div class = "span6">
		<%= form_for @post do |form| %>
		
		<% if @post.errors.any? %>
			<h2>Errors:</h2>
			<ul>
				<% @post.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>

<!--
	<p>
		<%= form.label :title %><br />
		<%= form.text_field :title %>
	</p>
-->

		<p>
			<%= form.label :content %>
			<%= form.text_area :content, :class => "span5" %>
		</p>
			<div class="row">
				<div class="span1 offset1">
					<%= form.label :status %>
				</div>
				<div class="span4">
					<%= form.select(:status, [['Idea', 1], ['In Development', 2]]) %>
				</div>
			</div>
		<!-- not necessary with no progress bar
<div id="progress-field">
				<%= form.label :progress %>
				<div id="slider"> </div>
				
				<%= form.hidden_field :progress %>
		</div>
-->
	
		<p>
			<%= form.submit "Update Idea"  %>
		</p>

		<% end %>
	</div>

	<div class="span6">
		<!- list all files in dropbox folder   ->
		<h3>Files in dropbox folder</h3>
		<ul>		
		<% @dbdata.filenames.each do |p| %>
				<li>		<%= p %>	</li>
		<% end %>
		
		</ul>
		<small><%=link_to "link to folder", @folderlink%></small>
	</div>
</div>
<div class="row">
	<div class="span6">
			
			<%= link_to "Delete", @post, :confirm => "Are you sure you want to delete this idea and all files its associated dropbox folder?", :method => :delete %>
			
	</div>
	<div class="span6">
		<div class="" id ="back">
			<%= link_to "Back", posts_path %>
		</div>
	</div>
</div>
