<h1>Add a New Post</h1>



<%= form_for @post do |form| %>
	<% if @post.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
	<p>
		<%= form.label :title %> <br />
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :content %> <br />
		<%= form.text_area :content %>
	</p>
	<p>
		<%= form.select(:status, [['Idea', 1], ['In Development', 2]]) %>
	</p>
	<div id="slider"></div>
	<%= form.hidden_field :progress %>
	<p>
		<%= form.submit "Add a New Post" %>
	</p>
<% end %>

		